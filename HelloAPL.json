{
    "type": "APL",
    "version": "1.3",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "mainTemplate": {
        "parameters": [
            "headlineExampleData"
        ],
        "items": [
            {
                "type": "Container",
                "height": "100vh",
                "items": [
                    {
                        "type": "AlexaHeadline",
                        "backgroundImageSource": "${headlineExampleData.backgroundImage}",
                        "headerAttributionImage": "${headlineExampleData.logoUrl}",
                        "primaryText": "${headlineExampleData.textContent.primaryText}",
                        "secondaryText": "${headlineExampleData.textContent.secondaryText}",
                        "footerHintText": "${headlineExampleData.properties.hintText}"
                    }
                ]
            }
        ]
    }
}